@model List<GagiStoreSystem.Models.Product>
<div class="col-md-12 mb-3">
    <div class="card text-left">
        <div class="card-body">
            <h4 class="card-title mb-3"> Məhsullar</h4>
            <button class="btn btn-primary ripple m-1" type="button">
                <a style="color:white;" href="@Url.Action("Add","Product")">
                    Yeni məhsul əlavə et
                </a>
            </button>
            <div class="table-responsive">
                <table style="min-width:1200px;" class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Şəkli</th>
                            <th scope="col">Kodu</th>
                            <th scope="col">Adı</th>
                            <th scope="col">Alış qiyməti</th>
                            <th scope="col">Maya dəyəri</th>
                            <th scope="col">Satış qiyməti</th>
                            <th scope="col">Parametrlər</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><img style="width:100px;height:100px;" src="~/uploads/products/@item.Photo" alt="photo" /></td>
                            <td>@item.Barcode</td>
                            <td>@item.Name</td>
                            <td>@item.BuyAmount.ToString("#.##") AZN</td>
                            <td>@item.CostAmount.ToString("#.##") AZN</td>
                            <td>@item.SaleAmount.ToString("#.##") AZN</td>
                            <td><a class="text-success mr-2" href="#"><i class="nav-icon i-Pen-2 font-weight-bold"></i></a><a class="text-danger mr-2" href="#"><i class="nav-icon i-Close-Window font-weight-bold"></i></a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>